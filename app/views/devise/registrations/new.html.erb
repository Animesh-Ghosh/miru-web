<div class="pt-10/100 px-10 xsm:px-20/100 sm:px-26/100 md:px-30/100 lg:px-32/100 xl:px-36/100">
  <div class="font-jakartasans">

    <h2 class="font-medium text-center text-3xl lg:text-4xl text-miru-1000 mb-5">Miru</h2>
    <div class="p-5 2xl:p-10 shadow-xl rounded-lg">
      <h2 class="text-miru-1000 lg:mb-3 text-base font-medium" >Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "text-xs text-miru-1000" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "h-8 w-full focus:outline-none bg-miru-200 text-sm" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "text-xs text-miru-1000" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-miru-1000">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "h-8 w-full focus:outline-none bg-miru-200 text-sm" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "text-xs text-miru-1000" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "h-8 w-full focus:outline-none bg-miru-200 text-sm" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "mt-5 h-8 w-full bg-miru-400 font-bold text-white text-base hover:bg-miru-1000" %>
        </div>

        <p class="m-3 text-xs text-miru-1000 text-center"> OR </p>

        <div>
          <button class=" h-8 w-full bg-miru-400 font-bold text-white text-base hover:bg-miru-1000">
            SIGN UP WITH GOOGLE
          </button>
        </div>
        <div>
          <button class="mt-5 h-8 w-full bg-miru-400 font-bold text-white text-base hover:bg-miru-1000">
            SIGN UP WITH APPLE
          </button>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>